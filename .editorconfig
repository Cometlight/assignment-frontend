# EditorConfig is awesome: http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# scripts
[bin/**]
indent_style = space
indent_size = 2

# project files
[package.json]
indent_style = space
indent_size = 2

# app
[app/**]
indent_style = space
indent_size = 2
